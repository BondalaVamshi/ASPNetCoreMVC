@page
@model RazorPagesSample.Pages.BookList.EditModel
@{
}

<br />
<h1 class="text-info">Update Book</h1>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.BookName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.BookName" class="form-control" />
            </div>
            <span asp-validation-for="Book.BookName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control " />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Volum"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Volum" class="form-control  " />
            </div>
            <span asp-validation-for="Book.Volum" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-1">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>
